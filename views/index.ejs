<%- include('layouts/header')  %>
<%- include('layouts/nav') %>   
        <section id="welcome-section">
            <div class="welcome-content">
                <img src="" alt="">
                <h1>DimensionalDragon</h1>
                <p>Learning web development</p>
            </div>
        </section>
        <section id="projects">
            <div class="projects-content">
                <h2 class="projects-header">These are some of my projects</h2>
                <div class="projects-container">
                    <% projects.forEach(project => { %>
                        <% const {title, description, image, link} = project %> 
                        <% const altName = image.replace('./images/', '').replace('.PNG', '').split('-').map(word => word[0].toUpperCase() + word.substr(1)).join(' ') %> 
                        <a href=<%= link %>  target="_blank" rel="noreferrer" class="project-tile">
                            <img src=<%= image %> alt=<%= altName %>  class="tile-image">
                            <div class="tile-content">
                                <h6 class="tile-header"><%= title %></h6>
                                <p class="tile-description"><%= description %> </p>
                            </div>
                        </a>
                    <% }) %>
                </div>
                <div class="btn-container">
                    <a href="#" class="projects-see-more">See More</a>
                </div>
            </div>
            <section class="contacts" id="contacts">
                <h2 class="contacts-header">Contact me</h2>
                <div class="contacts-container">
                    <a href="https://www.github.com/DimensionalDragon/" target="_blank" rel="noreferrer" class="contact" id="profile-link">
                        <img src="./icons/github.png" alt="">
                        <b>Github</b>
                    </a>
                    <a href="https://www.linkedin.com/in/andhika-satrya-980071228" target="_blank" rel="noreferrer" class="contact" id="profile-link">
                        <img src="./icons/linkedin.png" alt="">
                        <b>LinkedIn</b>
                    </a>
                </div>
                <div class="email">
                    <p class="email-desc">Or email me at</p>
                    <p class="email-address">andhikangurah@gmail.com</p>
                </div>
            </section>
        </section>
    </body>
</html>